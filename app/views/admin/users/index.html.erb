<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row">1</th>
        <td>
          <%= link_to user.name, root_path %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.role%></td>
        <td>
          <%= link_to 'Edit', root_path %>
          <%= link_to 'Delete', root_path %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>